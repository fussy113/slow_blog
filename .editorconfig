# EditorConfig is a file format that helps maintain consistent coding styles
# for multiple developers working on the same project across various editors and IDEs.
# https://editorconfig.org/

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# Ruby files
[*.{rb,rake,ru}]
indent_size = 2

# ERB files
[*.erb]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files (allow trailing whitespace for line breaks)
[*.md]
trim_trailing_whitespace = false

# CSS and SCSS files
[*.{css,scss}]
indent_size = 2

# JavaScript and TypeScript files
[*.{js,ts}]
indent_size = 2

# Database schema and migrations
[db/**.{rb,sql}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Gemfile and Guardfile
[{Gemfile,Guardfile,*.gemspec}]
indent_size = 2

# Docker related files
[{Dockerfile,docker-compose.yml}]
indent_size = 2

# GitLab CI configuration
[.gitlab-ci.yml]
indent_size = 2

# GitHub workflows
[.github/workflows/*.{yml,yaml}]
indent_size = 2
